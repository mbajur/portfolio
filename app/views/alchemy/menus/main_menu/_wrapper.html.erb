<% cache [menu, @page, Alchemy::Current.preview_page?] do %>
  <nav class="z-10 flex w-full justify-between px-5 font-mono text-sm uppercase fixed top-6 [&_a]:active:text-rose-500 [&_a]:hover:italic md:px-10">
    <a href="/" class="underline underline-offset-4 decoration-1">Mike Bajur</a>

    <%= render partial: menu.to_partial_path,
      collection: menu.children.includes(:page, :children),
      locals: { options: options },
      as: "node" %>
  </nav>
<% end %>
