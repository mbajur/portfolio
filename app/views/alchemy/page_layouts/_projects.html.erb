<div class="p-5 mt-15 md:mt-10 md:p-10">
  <div class="grid grid-cols-1 md:grid-cols-12 font-mono text-sm gap-x-20">
    <div class="col-span-1 md:col-span-4">
      <%= render @page.fixed_elements.named(:page_description), sticky: true %>
    </div>

    <div class="col-span-1 md:col-span-8">
      <% @page.children.each do |project| %>
        <div class="flex flex-col gap-y-10">
          <div class="grid grid-cols-1 md:grid-cols-12 gap-x-6 items-center">
            <div class="col-span-1 md:col-span-5">
              <a href="<%= project.urlname %>">
                <img loading="lazy" class="w-full" width="258" height="200" style="background-color: #090909" src="<%= project.fixed_elements.find_by(name: :project_thumb).ingredients.find_by(role: :picture).picture.url(size: '353x274', crop: true) %>">
              </a>
            </div>

            <div class="col-span-1 md:col-span-7 mt-5 md:mt-0 md:p-10">
              <a href="<%= project.urlname %>" class="underline underline-offset-4 decoration-1 uppercase">
                <%= project.title %>
              </a>

              <div class="mt-4">
                <%= simple_format project.fixed_elements.find_by(name: :project_description).ingredients.find_by(role: :excerpt).value %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
